<div class="container-fluid">
  <div class="row row-offcanvas row-offcanvas-left">
    <%= render "listings/listing_management_sidebar" %>
    <div class="col main pt-5 mt-3">
      <%= render 'layouts/messages' %>
      <h1>Disponibilité</h1>
        <%= form_for [@listing, @availability] do |f| %>
          <hr />
          <div class="row">
            <div class="form-group col-sm-7">
              <label>Délai de réservation :</label>
              <%= f.select(:advance_notice, Availability.advance_notices.keys, {prompt: 'Choisissez'}, {class: "form-control"})%>
            </div>
          </div>
          <br>
          <h3>Durée de la location</h1>
            <hr />
            <div class="row">
              <div class="form-group col-sm-7">
                <label>Durée minimum de location :</label>
                <%= f.number_field :minimum_rental, min: 1, class: "form-control" %>
              </div>
            </div>
            <div class="row">
              <div class="form-group col-sm-7">
                <label>Durée maximum de location :</label>
                <%= f.number_field :maximum_rental, min: 1, class: "form-control" %>
              </div>
            </div>
            <br >
            <h3>Réception et dépôt</h1>
              <hr />
              <div class="row">
                <div class="form-group col-sm-7">
                  <label>Heure de réception :</label>
                  <%= f.text_field :pickup_time, class: "form-control time" %>
                </div>
              </div>
              <div class="row">
                <div class="form-group col-sm-7">
                  <label>Heure de dépôt :</label>
                  <%= f.text_field :dropoff_time, class: "form-control time" %>
                </div>
              </div>
              <br >
              <div>
                <%= f.submit "Enregistrer", class: "btn btn-primary" %>
              </div>
        <% end %>
          </div>
        </div>
      </div>

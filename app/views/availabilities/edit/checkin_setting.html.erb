<div class="container">
  <div class="row row-offcanvas row-offcanvas-left">
    <div class="col main pt-5 mt-3">
      <%= render 'layouts/messages' %>
      <h1>Réception et dépôt</h1>
      <hr>
      <%= form_for [@listing, @availability] do |f| %>
      <div class="row">
        <div class="form-group col-sm-8">
          <label>Heure de réception :</label>
          <%= f.text_field :pickup_time, class: "form-control time" %>
        </div>
      </div>
      <div class="row">
        <div class="form-group col-sm-8">
          <label>Heure de dépôt :</label>
          <%= f.text_field :dropoff_time, class: "form-control time" %>
        </div>
      </div>
        <div class="mt-3">
          <%= f.submit "Enregistrer", class: "btn btn-primary" %>
          <%= f.submit "Annuler", class: "btn btn-outline-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

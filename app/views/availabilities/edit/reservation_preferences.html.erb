<div class="container">
  <div class="row row-offcanvas row-offcanvas-left">
    <div class="col main pt-5 mt-3">
      <%= render 'layouts/messages' %>
      <h1>Préférences de réservation</h1>
      <hr>
      <%= form_for [@listing, @availability] do |f| %>
      <div class="row">
        <div class="form-group col-sm-8">
          <label>Délai :</label>
          <%= f.select(:advance_notice, Availability.advance_notices.keys, {prompt: 'Choisissez'}, {class: "form-control advance-notice"})%>
        </div>
      </div>
      <div class="row deadline">
        <div class="form-group col-sm-8">
          <label>Les cyclistes peuvent réserver le jour même jusqu'à :</label>
          <%= f.text_field :deadline, class: "form-control time" %>
        </div>
      </div>
      <div class="mt-3">
        <%= f.submit "Enregistrer", class: "btn btn-primary" %>
        <%= f.submit "Annuler", class: "btn btn-outline-primary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>

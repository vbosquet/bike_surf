<div class="container">
<div class="row row-offcanvas row-offcanvas-left">
  <div class="col main pt-5 mt-3">
    <%= render 'layouts/messages' %>
    <div>
      <%= link_to "Retour", edit_listing_path(@listing), class: "btn btn-outline-primary float-sm-right" %>
      <h1 class="mt-4">Photos</h1>
      <hr>
    </div>

    <div class="row">
      <% @photos.each do |photo| %>
      <div class="col-md-4 mb-4">
        <div class="img-thumbnail">
          <%= image_tag photo.attachment.url(:medium), style: "width:100%" %>
          <%= button_to [@listing, @bike, photo], method: :delete, remote: true, class: "btn btn-danger" do %>
            <span class="fa fa-trash-o fa-lg" aria-hidden="true"></span>
          <% end %>
        </div>
      </div>
      <% end %>
      <hr>
    </div>

    <div class="row">
      <div class="col-sm-12">
        <%= form_for [@listing, @bike, @photo], html: { multipart: true } do |f| %>
        <div class="custom-file col-sm-8 mt-4">
          <%= f.file_field :attachment, class: "custom-file-input", lang: "fr" %>
          <label class="custom-file-label">Ajouter une photo</label>
        </div>
        <%= f.submit "Enregistrer", class: "btn btn-primary float-sm-right mt-4" %>
        <% end %>
      </div>
    </div>

  </div>
</div>
</div>

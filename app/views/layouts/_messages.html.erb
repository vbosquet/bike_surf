<% flash.each do |message_type, messages| %>
  <div class="alert alert-<%= message_type %> alert-dismissible">
    <button type="button" class="close" data-dismiss="alert">
      <span>&times;</span>
    </button>
    <% if messages.kind_of?(Array) %>
      <ul>
        <% messages.each do |msg| %>
          <li><%= msg.join("<br>") %></li>
          <% end %>
        </ul>
    <% else %>
      <%= messages %>
    <% end %>
  </div>
<% end %>

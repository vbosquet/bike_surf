<div class="container">
  <div class="row">
    <div class="col-sm-3">
      <%= render "listing_management_sidebar" %>
    </div>
    <div class="col-sm-9">
      <h1><%= @listing.title %></h1>
      <div class="row">
        <%= image_tag @listing.bike.photo.url(:medium), class: "card col-sm-4" %>
        <div class="card col-sm-4">
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Taille : <%= @listing.bike.size %></li>
          <li class="list-group-item">Lumières : <%= @listing.bike.lights ? "Oui" : "Non" %></li>
          <li class="list-group-item">Statut de l'annonce : <%= @listing.listed ? "Publiée" : "Désactivée" %></li>
        </ul>
      </div>
      </div>
      <br >
      <div class="card w-75">
        <div class="card-body">
          <p class="card-text"><%= @listing.description %></p>
        </div>
      </div>
    </div>
  </div>
</div>
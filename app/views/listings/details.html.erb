<div class="container">
  <div class="row row-offcanvas row-offcanvas-left">
    <div class="col main pt-5 mt-3">
      <%= render 'layouts/messages' %>

      <div>
        <%= link_to "Prévisualiser l'annonce", listing_preview_path(@listing), class: "btn btn-primary float-sm-right" %>
        <h1 class="mb-4"><%= @listing.title %></h1>
      </div>

      <ul class="nav nav-tabs">
        <li class="nav-item">
          <a class="nav-link active" href="#details" data-toggle="tab">Détails de l'annonce</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#pricings" data-toggle="tab">Tarifs</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#availabilities" data-toggle="tab">Disponibilités</a>
        </li>
      </ul>

      <div class="tab-content">
        <div class="tab-pane active" id="details">
          <%= render partial: "listings/tabs/details" %>
        </div>
        <div class="tab-pane" id="pricings">
          <%= render partial: "listings/tabs/pricings" %>
        </div>
        <div class="tab-pane" id="availabilities">
          <%= render partial: "listings/tabs/availabilities" %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= form_for @listing, html: { multipart: true } do |f| %>
<div class="row">
  <div class="form-group col-sm-8">
    <label>Titre :</label>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group col-sm-8">
    <label>Description :</label>
    <%= f.cktext_area :description, :class => "form-control", ckeditor: { language: 'fr'} %>
  </div>
</div>

<br >
<h3>Le vélo</h1>
  <hr />

  <%= f.fields_for :bike do |ff| %>
  <div class="row">
    <div class="form-group col-sm-8">
      <label>Photo :</label>
      <%= ff.file_field :photo, class: "form-control-file" %>
    </div>
  </div>

  <div class="row">
    <div class="form-check">
      <label class="form-check-label">
        <%= ff.check_box :lights, class: "form-check-input" %> Lumières
      </label>
    </div>
  </div>

  <br>
  <div class="row">
    <div class="col-sm-8">
      <label>Taille :</label>
      <%= ff.select(:size, Bike.sizes.keys, {prompt: 'Choisissez'}, {class: "form-control"})%>
    </div>
  </div>
  <% end %>

  <br >
  <h3>Point de collecte</h1>
    <hr />

    <label>Adresse :</label>
    <%= f.fields_for :location do |ff| %>
    <div class="row">
      <div class="col-sm-3">
        <%= ff.text_field :street_number, class: "form-control", placeholder: "Numéro"%>
      </div>
      <div class="col-sm-5">
        <%= ff.text_field :route, class: "form-control", placeholder: "Rue"%>
      </div>
    </div>
    <br >
    <div class="row">
      <div class="col-sm-3">
        <%= ff.text_field :locality, class: "form-control", placeholder: "Ville"%>
      </div>
      <div class="col-sm-2">
        <%= ff.text_field :postal_code, class: "form-control", placeholder: "Code postal"%>
      </div>
      <div class="col-sm-3">
        <%= ff.country_select :country_code, {include_blank: 'Choisissez un pays'}, {class: "form-control"} %>
      </div>
    </div>
    <% end %>
    <br>
    <div>
      <%= f.submit "Continuer", class: "btn btn-primary" %>
    </div>
    <% end %>

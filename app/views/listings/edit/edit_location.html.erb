<div class="container">
  <div class="row row-offcanvas row-offcanvas-left">
    <div class="col main pt-5 mt-3">
      <%= render 'layouts/messages' %>
      <h1>Où se trouve votre vélo ?</h1>
      <hr>
      <div class="row">
        <div class="mt-4 col-sm-8">
          <%= form_for @listing, html: { multipart: true } do |f| %>
          <%= f.fields_for :location do |location_form| %>
          <div class="form-row">
            <div class="col-sm-3 mb-3">
              <%= location_form.text_field :street_number, class: "form-control", placeholder: "Numéro"%>
            </div>
            <div class="col-sm-9 mb-3">
              <%= location_form.text_field :route, class: "form-control", placeholder: "Rue"%>
            </div>
          </div>
          <div class="form-row">
            <div class="col-sm-4 mb-3">
              <%= location_form.text_field :locality, class: "form-control", placeholder: "Ville"%>
            </div>
            <div class="col-sm-3 mb-3">
              <%= location_form.text_field :postal_code, class: "form-control", placeholder: "Code postal"%>
            </div>
            <div class="col-sm-5 mb-3">
              <%= location_form.country_select :country_code, {include_blank: 'Choisissez un pays'}, {class: "form-control"} %>
            </div>
          </div>
          <% end %>
          <div class="mt-3">
            <%= f.submit "Enregistrer", class: "btn btn-primary" %>
            <%= f.submit "Annuler", class: "btn btn-outline-primary" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

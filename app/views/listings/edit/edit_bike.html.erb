<div class="container">
  <div class="row row-offcanvas row-offcanvas-left">
    <div class="col main pt-5 mt-3">
      <%= render 'layouts/messages' %>
      <h1>Caractéristiques et équipements</h1>
      <hr>
      <%= form_for @listing, html: { multipart: true } do |f| %>
        <%= f.fields_for :bike do |ff| %>
        <div class="form-row">
          <div class="col-sm-8 mb-3">
              <label>Taille :</label>
              <%= ff.select(:size, Bike.sizes.keys, {prompt: 'Choisissez'}, {class: "form-control"})%>
          </div>
        </div>
        <div class="row">
          <div class="form-group">
            <div class="form-check">
              <label class="form-check-label">
                <%= ff.check_box :hasBackPedalBrake, class: "form-check-input" %> Frein à pédale arrière
              </label>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="form-group">
            <div class="form-check">
              <label class="form-check-label">
                <%= ff.check_box :lights, class: "form-check-input" %> Lumières
              </label>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="form-group">
            <div class="form-check">
              <label class="form-check-label">
                <%= ff.check_box :fonts, class: "form-check-input" %> Fontes
              </label>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="form-group">
            <div class="form-check">
              <label class="form-check-label">
                <%= ff.check_box :basket, class: "form-check-input" %> Panier
              </label>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="form-group">
            <div class="form-check">
              <label class="form-check-label">
                <%= ff.check_box :helmet, class: "form-check-input" %> Casque
              </label>
            </div>
          </div>
        </div>
        <% end %>
        <div class="mt-3">
          <%= f.submit "Enregistrer", class: "btn btn-primary" %>
          <%= f.submit "Annuler", class: "btn btn-outline-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<% @loan_conversations.each do |conversation| %>
  <div class="container">
    <div class="row mt-3">
      <div class="col-md-3"><%= User.find(conversation.borrower_id).full_name %></div>
      <div class="col-md-4"><%= @full_sanitizer.sanitize(conversation.messages.last.body).truncate(50, separator: ' ') %></div>
      <div class="col-md-3"><%= Booking.human_enum_name(:status, conversation.messages.where('booking_id is not null').last.booking.booking_statuses.last.status) %></div>
      <div class="col-md-2">
        <%= link_to conversation_path(conversation) do %>
          <i class="fa fa-eye" aria-hidden="true"></i>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3"><%= conversation.messages.last.created_at.strftime("%d/%m/%Y") %></div>
      <div class="col-md-4"><%= conversation.messages.where('booking_id is not null').last.booking.listing.title %></div>
      <div class="col-md-3"><%= conversation.messages.where('booking_id is not null').last.booking.total_price %> <%= conversation.messages.where('booking_id is not null').last.booking.listing.pricing.currency %></div>
      <div class="col-md-2"></div>
    </div>
  </div>
  <hr >
<% end %>

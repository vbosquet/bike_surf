<% @loan_conversations.each do |conversation| %>
  <div class="container">
    <div class="row mt-3">
      <div class="col"><%= User.find(conversation.borrower_id).full_name %></div>
      <div class="col"><%= @full_sanitizer.sanitize(conversation.messages.last.body).truncate(50, separator: ' ') %></div>
      <div class="col"><%= Booking.human_enum_name(:status, conversation.messages.where('booking_id is not null').last.booking.status) %></div>
    </div>
    <div class="row">
      <div class="col"><%= conversation.messages.last.created_at.strftime("%d/%m/%Y") %></div>
      <div class="col"><%= conversation.messages.where('booking_id is not null').last.booking.listing.title %></div>
      <div class="col"><%= conversation.messages.where('booking_id is not null').last.booking.total_price %> <%= conversation.messages.where('booking_id is not null').last.booking.listing.pricing.currency %></div>
    </div>
  </div>
  <hr >
<% end %>


<div class="container">
  <div class="row row-offcanvas row-offcanvas-left">
    <div class="col main pt-5 mt-3">
      <%= render 'layouts/messages' %>
      <h1>Conversation avec <%= @recever.full_name %></h1>
      <hr >
      <div class="container col-md-6 float-left">
        New content here...
      </div>
      <div class="container col-md-6 float-right">
        <% unless @conversation.messages.last.booking.present? &&
            @conversation.messages.last.booking.booking_statuses.last.status == "pending" &&
            @conversation.lender_id == current_user.id %>
          <div class="container border pt-3 pb-3 mb-5">
            <%= render partial: 'messages/form' %>
          </div>
        <% end %>
        <%= render partial: 'messages/index' %>
      </div>
    </div>
  </div>
</div>
